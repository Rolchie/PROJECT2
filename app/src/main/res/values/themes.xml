<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MARAMAGAGRICULTURALAID" parent="Theme.MaterialComponents">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/ButtonGreen</item>
    </style>

    <style name="Theme.MARAMAGAGRICULTURALAID" parent="Base.Theme.MARAMAGAGRICULTURALAID" />

    <style name="FAB">

        <item name="cornerSize">40%</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Theme.MARAMAGAGRICULTURALAID.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MARAMAGAGRICULTURALAID.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MARAMAGAGRICULTURALAID.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.YourAppName" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Enable Splash Screen -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
    </style>

</resources>